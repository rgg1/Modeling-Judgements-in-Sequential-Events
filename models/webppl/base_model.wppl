// Run model for sequential predictions
var getSequentialPredictions = function(sequence) {
    var predictions = map(function(i) {
        if (i === 0) return null;  // Skip first position as in human experiment
        
        // Get sequence up to current position
        var prevSequence = sequence.slice(0, i);
        
        // Get model predictions for both domains
        var coinPred = expectation(predictNext(prevSequence, 'coin'));
        var bballPred = expectation(predictNext(prevSequence, 'basketball'));
        
        return {
            position: i,
            prevSequence: prevSequence,
            coinPrediction: coinPred,
            basketballPrediction: bballPred
        };
    }, _.range(sequence.length));
    
    return predictions;
};

// Run model for domain classification
var getSequenceClassification = function(sequence) {
    var classification = classifySequence(sequence);
    var bballProb = expectation(classification, function(x) { return x === 'basketball' ? 1 : 0; });
    var streakiness = getStreakiness(sequence);
    
    return {
        basketballProb: bballProb,
        streakiness: streakiness
    };
};

// Generate samples from prior distributions - reduced from 1000 to 100 samples
var generatePriorSamples = function(domainPriors) {
    var domains = ['coin', 'basketball'];
    var coinPriors = domainPriors['coin'];
    var bballPriors = domainPriors['basketball'];
    
    return {
        coin_theta: repeat(100, function() {  // Reduced from 1000
            return beta(coinPriors.thetaMean * coinPriors.thetaStrength, 
                       (1-coinPriors.thetaMean) * coinPriors.thetaStrength);
        }),
        coin_alpha: repeat(100, function() {  // Reduced from 1000
            return beta(coinPriors.alphaMean * coinPriors.alphaStrength,
                       (1-coinPriors.alphaMean) * coinPriors.alphaStrength);
        }),
        basketball_theta: repeat(100, function() {  // Reduced from 1000
            return beta(bballPriors.thetaMean * bballPriors.thetaStrength, 
                       (1-bballPriors.thetaMean) * bballPriors.thetaStrength);
        }),
        basketball_alpha: repeat(100, function() {  // Reduced from 1000
            return beta(bballPriors.alphaMean * bballPriors.alphaStrength,
                       (1-bballPriors.alphaMean) * bballPriors.alphaStrength);
        })
    };
};

// Analyze probability adjustments - reduced range from 10 to 6
var analyzeProbabilityAdjustments = function(domain) {
    var priors = domainPriors[domain];
    var theta = beta(priors.thetaMean * priors.thetaStrength, 
                    (1-priors.thetaMean) * priors.thetaStrength);
    var alpha = beta(priors.alphaMean * priors.alphaStrength,
                    (1-priors.alphaMean) * priors.alphaStrength);
    
    return {
        success_streaks: map(function(length) {
            var sequence = repeat(length, function() { return true; });
            return adjustProb(theta, alpha, priors.streakWeight, sequence);
        }, _.range(1, 7)),  // Reduced from 11 to 7 (streaks of length 1-6)
        failure_streaks: map(function(length) {
            var sequence = repeat(length, function() { return false; });
            return adjustProb(theta, alpha, priors.streakWeight, sequence);
        }, _.range(1, 7))   // Reduced from 11 to 7
    };
};

// Analyze sequence characteristics - simplified output format
var analyzeSequenceCharacteristics = function(sequence) {
    var streaks = countConsecutive(sequence);
    return {
        streakiness: streaks.length > 0 ? sum(streaks) / streaks.length : 0,
        maxStreak: streaks.length > 0 ? getMaxInArray(streaks) : 0,
        // Removed proportionTrue and numTransitions as they're less essential
    };
};

